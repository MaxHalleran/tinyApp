<!DOCTYPE html>
<html lang="en">

  <head>
    <title>TinyApp Registration</title>
    <%- include('partials/_head') %>
    <%- include('partials/_styles') %>
  </head>

  <!-- Should redirect back here and populate the form with input values if there was a rejection -->

  <body>
    <div class="container register">

      <%- include('partials/_header') %>

      <form action='/register' method='POST' style='margin-left:150px;'>
        <label class='regForm' for='email'>Enter your username, email and a password:</label>
        <input class='regForm' id='username' type='text' name='username' placeholder='What do you want us to call you?' style='width:300px'>
        <input class='regForm' id='email' type='email' name='email' placeholder='example@gmail.com' style='width:300px'>
        <input class='regForm' id='password' type=' password' name='password' placeholder='*****' style='width:300px'>
        <input class='regForm' type='submit' value='Register'>
      </form>

    </div>
  </body>

</html>